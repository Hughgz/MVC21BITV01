@model IEnumerable<MVC21BITV01Test.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}
<style>
    td {
        color: #545454;
    }

    th {
        color: #042b91;
    }
</style>

<h1 style="color: #042b91;">Danh sách đơn hàng</h1>


<p>
    <div class="d-flex">
        <a asp-action="Create" class="btn btn-outline-primary">TẠO MỚI</a>
    </div>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Ngày lập hóa đơn
            </th>
            <th>
                Ngày nhận hàng
            </th>
            <th>
                Mã khách hàng
            </th>
            <th>
                Mã nhân viên
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NgayLapHd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhanHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhNavigation.MaKh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaNvNavigation.MaNv)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MaHd" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-mahd="@item.MaHd" class="btn btn-outline-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.MaHd" class="btn btn-outline-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
