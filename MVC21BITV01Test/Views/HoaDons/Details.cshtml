@model MVC21BITV01Test.ViewModels.HoaDonDetailViewModel

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<h2 style="color: #042b91;">Chi tiết hóa đơn</h2>

<div>
    <h5 style="color: #545454;" class="mt-3">Hóa đơn</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã hóa đơn
        </dt>
        <dd class="col-sm-10">
            @Model.HoaDon.MaHd
        </dd>
        <dt class="col-sm-2">
            Khách hàng
        </dt>
        <dd class="col-sm-10">
            @Model.HoaDon.MaKhNavigation.TenCty
        </dd>
        <dt class="col-sm-2">
            Ngày lập hóa đơn
        </dt>
        <dd class="col-sm-10">
            @Model.HoaDon.NgayLapHd.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Ngày nhận hàng
        </dt>
        <dd class="col-sm-10">
            @Model.HoaDon.NgayNhanHang.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Nhân viên
        </dt>
        <dd class="col-sm-10">
            @Model.HoaDon.MaNvNavigation?.Ten
        </dd>
    </dl>
</div>

<h5 style="color: #545454;" class="mt-3">Chi tiết sản phẩm</h5>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Mã SP
            </th>
            <th>
                Tên SP
            </th>
            <th>
                Đơn vị tính
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Thành tiền
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChiTietHoaDons)
        {
            <tr>
                <td>
                    @item.MaSp
                </td>
                <td>
                    @item.MaSpNavigation.TenSp
                </td>
                <td>
                    @item.MaSpNavigation.DonViTinh
                </td>
                <td>
                    @item.MaSpNavigation.DonGia
                </td>
                <td>
                    @item.SoLuong
                </td>
                <td>
                    @(item.SoLuong * item.MaSpNavigation.DonGia)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-5">
    <h3 style="color: #042b91;">Tổng Tiền: @Model.TongTien.ToString("C")</h3>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
