
@{
    ViewData["Title"] = "ProductsById";
}

<h1>ProductsById</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Mã SP
            </th>
            <th>
                Tên SP
            </th>
            <th>
                Đơn vị tính
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Thành tiền
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.maSP</td>
                <td>@item.tenSP</td>
                <td>@item.donViTinh</td>
                <td>@item.soLuong</td>
                <td>@item.soLuong</td>
                <td>@item.donGia</td>
                <td>@item.thanhTien</td>
            </tr>
        }
    </tbody>
</table>

